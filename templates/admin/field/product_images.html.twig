

{% for field in entity.fields %}

     {% if field.property == "images" or field.property == "gallery_images" or field.property == 'carouselImages' %}
          {% for image in field.value.unwrap.values %}
              {% if vich_uploader_asset(image, 'imageFile') is not null %}

                   {% set html_id = 'ea-lightbox-' ~ field.uniqueId ~ '-' ~ image.id %}

                     <a href="#" class="ea-lightbox-thumbnail" data-ea-lightbox-content-selector="#{{ html_id }}" data-featherlight="#{{ html_id }}" data-featherlight-close-on-click="anywhere">
                         <img src="{{ vich_uploader_asset(image, 'imageFile') |imagine_filter('user_mini_thumbnail') }}" class="img-fluid">
                     </a>

                     <div id="{{ html_id }}" class="ea-lightbox">
                         <img src="{{ vich_uploader_asset(image, 'imageFile') }}">
                     </div>
              {% endif %}

         {% endfor %}


    {% endif %}

{% endfor %}
